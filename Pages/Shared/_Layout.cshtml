<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AIToolSelector.styles.css" asp-append-version="true" />
    <!-- Google tag (gtag.js) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script async src="https://www.googletagmanager.com/gtag/js?id=G-KBDRZLWDT0"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-KBDRZLWDT0');
</script>
</head>
<body style="background: linear-gradient(135deg,#667eea,#764ba2); min-height:100vh;">

    <!-- Modern Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent py-3">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" asp-page="/Index">
                🚀 AIToolSelector
            </a>

            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main White Card Container -->
    <div class="container py-5">
        <div class="bg-white rounded-4 shadow-lg p-5">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center text-white py-3 mt-4">
        © 2026 AIToolSelector
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>