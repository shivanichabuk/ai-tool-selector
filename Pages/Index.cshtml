@page
@model IndexModel
@{
    ViewData["Title"] = "Best AI Tools 2026 | Free & Paid AI Tool Finder";
    ViewData["Description"] = "Compare the best AI tools for writing, coding, image editing, video generation, Excel and astrology. Find free and paid AI tools instantly.";
}

<div class="container mt-5 text-center">
    <h1>Find the Best AI Tool for Your Needs</h1>
    <p class="lead">Select your requirements and get recommendations instantly.</p>

    <form method="post" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Task</label>
<select class="form-select" asp-for="Task">
    <option value="writing">Writing</option>
    <option value="coding">Coding</option>
    <option value="image">Image</option>
    <option value="video">Video</option>
    <option value="logo">Logo</option>
    <option value="avatar">Avatar</option>
    <option value="notes">Notes</option>
    <option value="excel">Excel</option>
    <option value="website">Website</option>
    <option value="presentation">Presentation</option>
    <option value="study">Study</option>
    <option value="paraphrase">Paraphrase</option>
    <option value="astrology">Astrology</option>
</select>

        </div>

        <div class="mb-3">
            <label class="form-label">Budget</label>
         <select class="form-select" asp-for="Budget">
            <option value="free">Free</option>
            <option value="paid">Paid</option>
        </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Skill Level</label>
            <select class="form-select" asp-for="Level">
            <option value="beginner">Beginner</option>
            <option value="advanced">Advanced</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Get Recommendation</button>
    </form>


    @if (Model.Tools != null && Model.Tools.Any())
{
    <div class="mt-5">

        <!-- TOP RESULT -->
        <h4 class="mb-3 text-success">⭐ Recommended for You</h4>

        @{
            var best = Model.Tools.First();
        }

        <div class="card shadow border-success mb-4  best-card">
            <div class="card-body">

                <h4 class="card-title">
                    @best.Name
                    <span class="badge bg-success ms-2">Best Match</span>
                </h4>

                <p class="mb-2 text-muted">
                    Best for <b>@best.Category</b>
                </p>

                <small class="text-secondary">
                    @best.Price • @best.Level
                </small>

                <div class="mt-3">
                    <a href="#" class="btn btn-success">
                        Open Tool
                    </a>
                </div>

            </div>
        </div>


        <!-- OTHER OPTIONS -->
        @if (Model.Tools.Count > 1)
        {
            <h5 class="mb-3">Other Options</h5>

            @foreach (var tool in Model.Tools.Skip(1))
            {
                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-body">

                        <h5 class="card-title">@tool.Name</h5>

                        <p class="mb-1 text-muted">
                            Best for <b>@tool.Category</b>
                        </p>

                        <small class="text-secondary">
                            @tool.Price • @tool.Level
                        </small>

                        <div class="mt-2">
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                Open Tool
                            </a>
                        </div>

                    </div>
                </div>
            }
        }

    </div>
}  
    @else 
{
    <div class="alert alert-warning mt-4">
        No exact match found. Try changing your filters.
    </div>
}
        
</div>